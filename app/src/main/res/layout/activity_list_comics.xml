    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_header"
        android:background="@color/bgHeader"
        android:paddingLeft="@dimen/padding_header"
        android:paddingRight="@dimen/padding_header">

        <ImageView
            android:layout_width="@dimen/menu_header"
            android:layout_height="@dimen/menu_header"
            android:src="@drawable/menu_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/type_header"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="@dimen/type_header"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/search_header"
                android:layout_height="@dimen/search_header"
                android:src="@drawable/search_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_search_user"/>
            <ImageView
                android:layout_width="@dimen/user_header"
                android:layout_height="@dimen/user_header"
                android:src="@drawable/user_icon"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
