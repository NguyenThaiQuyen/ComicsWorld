<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreenActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_screen">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:weightSum="14">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="4"
            android:background="@drawable/wrap"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="New Update"
                android:textColor="@color/bgHeader"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_update"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="5"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Top Rating"
                android:textStyle="bold"
                android:textColor="@color/bgHeader"
                android:textSize="@dimen/text_size_title1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"/>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>